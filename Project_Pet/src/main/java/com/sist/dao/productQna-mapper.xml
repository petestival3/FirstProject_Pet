<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.dao.productQna-mapper">

<sql id="productQnaTable">
SELECT qno,qtitle,qcontent,TO_CHAR(qregdate,'YYYY-MM-DD HH24:MI:SS') as dbday,
qwriter,qtype,pno,answercheck,secretcheck,filename,filesize
</sql>
<select id="productQnaListData" resultType="QnaBoardVO" parameterType="hashmap">
<include refid="productQnaTable"/>
FROM QnaBOARD
</select> 

</mapper>